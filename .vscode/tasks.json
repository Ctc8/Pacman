{
  "version": "2.0.0",
  "tasks": [
      {
          "label": "build",
          "type": "shell",
          "command": "g++",
          "args": [
              "${workspaceFolder}/main.cpp",
              "${workspaceFolder}/Pacman.cpp",
              "${workspaceFolder}/Ghost.cpp",
              "-o",
              "${workspaceFolder}/main",
              "-framework",
              "GLUT",
              "-framework",
              "OpenGL"
          ],
          "group": {
              "kind": "build",
              "isDefault": true
          },
          "presentation": {
              "echo": true,
              "reveal": "always",
              "focus": false,
              "panel": "shared",
              "showReuseMessage": true,
              "clear": false
          },
          "problemMatcher": "$gcc"
      }
  ]
}

